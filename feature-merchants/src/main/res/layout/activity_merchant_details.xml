<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".details.MerchantDetailsActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/merchantDetailsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sixteen_dips"
            android:layout_marginStart="@dimen/sixteen_dips"
            android:layout_marginEnd="@dimen/sixteen_dips"
            app:cardCornerRadius="@dimen/card_radius">

            <com.example.feature_merchants.details.component.MerchantDetailsView
                android:id="@+id/merchantDetailsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/similarMerchantsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_four_dips"
            android:layout_marginStart="@dimen/sixteen_dips"
            android:layout_marginEnd="@dimen/sixteen_dips"
            android:text="@string/similar_merchants_label"
            android:textStyle="bold"/>

        <com.example.feature_merchants.similar.component.SimilarMerchantsView
            android:id="@+id/similarMerchantsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dips" />

    </LinearLayout>
</ScrollView>